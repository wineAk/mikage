{
  "include": ["server.ts"],
  "exclude": [
    "app",
    "types",
    "react-router.config.js",
    "vite.config.js",
    "build"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
} 